<div>
  <h3>Users info<h3>
    <%= image_tag @user.get_profile_image(100,100) %>
    name　<%= @user.name %><br>
    introduction　<%= @user.introduction %><br>
    <%= link_to "edit", edit_user_path(@user.id) %>
</div>
<div>
  <h3>New book<h3>
    <%= form_with model: @book do |f| %>
      <label for ="book_title">Title</label><br><%= f.text_field :title, class:"" %><br>
      <label for = "book_opinion">Opinion</label><br><%= f.text_area :body, class:"" %><br>
      <%= f.submit 'Create Book', class:"" %>
    <% end %>
</div>