<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'users/sidebar' , user: @user, book: @book_co %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user.id) do %>
              <%= image_tag @book.user.get_profile_image(100,100) %><br>
              <%= @book.user.name %>
              <% end %>
            </td>
            <td><%= link_to @book.title , book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
              <td><%= link_to 'Edit' , edit_book_path(@book.id) , class: "btn btn-sm btn-success" %>
              <td><%= link_to 'Destroy' , book_path(@book.id) , class: "btn btn-sm btn-danger" , method: :delete , "data-confirm" => "本当に消しますか？" %>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>